{
  "name": "@nantis/typescript-code-style",
  "version": "0.0.0-development",
  "description": "Common ESLint coding style for the Nantis IoT Platform",
  "main": "index.js",
  "scripts": {
    "test": "eslint --ext .js,.ts,.tsx *.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "keywords": [],
  "author": "Nantis GmbH",
  "homepage": "https://github.com/Nantis-GmbH/eslint-code-style",
  "bugs": {
    "url": "https://github.com/Nantis-GmbH/eslint-code-style/issues"
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "4.15.0",
    "eslint-config-prettier": "7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@nantis/eslint-config-typescript": "1.0.0",
    "@types/node": "14.14.25",
    "eslint": "7.19.0",
    "husky": "5.0.9",
    "lint-staged": "10.5.4",
    "pinst": "2.1.4",
    "prettier": "2.2.1",
    "typescript": "4.1.5"
  },
  "files": [
    "README",
    "LICENSE",
    "package-lock.json",
    "templates",
    "tsconfig.json",
    ".prettierrc.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "remoteTags": true
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  }
}
